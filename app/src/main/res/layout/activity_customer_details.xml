<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_DetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_bar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_back_arrow"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Details"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Address1"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="NO. 2/PC/8,"
            android:background="@drawable/rectangle_border_square"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Address2"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="MUGAPAIR WEST,"
            android:background="@drawable/rectangle_border_square"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Address3"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="KAMBAR SALAI, CHENNAI"
            android:background="@drawable/rectangle_border_square"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="PIN"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:text=""
            android:background="@drawable/rectangle_border_square"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Contract Type"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="PSM"
            android:background="@drawable/rectangle_border_square"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Contract Status"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="ACTIVE"
            android:background="@drawable/rectangle_border_square"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="230dp"
            android:layout_marginLeft="230dp"
            android:text="Continue"
            android:background="@color/blue_btn_bg_color"
            android:textSize="15dp"
            android:textColor="#ffffff"/>


    </LinearLayout>

    </ScrollView>

</RelativeLayout>