<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RTGS_PopActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_bar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_back_arrow"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RTGS List"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Search Job No"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
               android:gravity="end"
                android:textColor="#000000"
                android:textSize="15dp"/>

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_border_square"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_pop"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="URT No"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView1_pop"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="Bank_Details"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp"/>
        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView2_pop"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="Amount"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView3_pop"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="Customer Name"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView4_pop"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="IFSC Code"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView5_pop"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="Balance Amt"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>